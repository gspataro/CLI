{
    "name": "gspataro/cli",
    "description": "Create terminal applications with ease",
    "keywords": ["cli"],
    "license": "MIT",
    "authors": [
        {
            "name": "Giuseppe Spataro",
            "homepage": "https://github.com/gspataro"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "pestphp/pest": "^2.4.0"
    },
    "autoload": {
        "psr-4": {
            "GSpataro\\CLI\\": "src/CLI/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
